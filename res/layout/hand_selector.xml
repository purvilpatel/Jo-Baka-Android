<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#235578"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".JoBaka" >

    <ImageView
        android:id="@+id/mainHandImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:layout_marginTop="50dp"
        android:padding="7dp"
        android:scaleType="fitXY"
        android:src="@drawable/plain_baka" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="7dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4.0"
            android:gravity="center" >

            <ImageView
                android:id="@+id/handImage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1.0"
                android:background="@drawable/hand_bkg"
                android:padding="7dp"
                android:scaleType="centerInside"
                android:src="@drawable/hand_1" />

            <ImageView
                android:id="@+id/handImage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1.0"
                android:background="@drawable/hand_bkg"
                android:padding="7dp"
                android:scaleType="centerInside"
                android:src="@drawable/hand_2" />

            <ImageView
                android:id="@+id/handImage3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1.0"
                android:background="@drawable/hand_bkg"
                android:padding="7dp"
                android:scaleType="centerInside"
                android:src="@drawable/hand_3" />

            <ImageView
                android:id="@+id/handImage4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1.0"
                android:background="@drawable/hand_bkg"
                android:padding="7dp"
                android:scaleType="centerInside"
                android:src="@drawable/hand_4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4.0"
            android:gravity="center" >

            <ImageView
                android:id="@+id/handImage5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1.0"
                android:background="@drawable/hand_bkg"
                android:padding="7dp"
                android:scaleType="centerInside"
                android:src="@drawable/hand_5" />

            <ImageView
                android:id="@+id/handImage6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1.0"
                android:background="@drawable/hand_bkg"
                android:padding="7dp"
                android:scaleType="centerInside"
                android:src="@drawable/hand_6" />

            <ImageView
                android:id="@+id/handImage7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1.0"
                android:background="@drawable/hand_bkg"
                android:padding="7dp"
                android:scaleType="centerInside"
                android:src="@drawable/hand_7" />

            <ImageView
                android:id="@+id/handImage8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1.0"
                android:background="@drawable/hand_bkg"
                android:padding="7dp"
                android:scaleType="centerInside"
                android:src="@drawable/hand_8" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3.0" >

        <Button
            android:id="@+id/select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8px"
            android:layout_weight="1.0"
            android:background="#08B7CA"
            android:text=" Next "
            android:textColor="#eeeeee" />
    </LinearLayout>

</LinearLayout>